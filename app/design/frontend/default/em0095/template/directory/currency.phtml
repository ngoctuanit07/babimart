/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="block block-currency" id="currency">
    <span class="title-currency"><?php echo $this->__('Change Currency') ?></span>
	  <ul class="currency-content">
        <?php $i = 1; foreach ($this->getCurrencies() as $_code => $_name): ?>
    		<?php $_selected = ($_code==$this->getCurrentCurrencyCode()) ? 'selected' : '' ?>
			<li class="<?php if($i == 1): ?>first<?php endif; ?><?php echo  $_selected ?>">
				<a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" style="background-image:url(<?php echo $this->getSkinUrl('images/currency/'.strtolower($_code).'.png') ?>); background-repeat: no-repeat;" title="<?php echo $_code ?>"><?php echo $_code ?></a>
			</li>
	   <?php $i ++; ?>
        <?php endforeach; ?>	
    </ul>
    <script type="text/javascript">decorateGeneric($$('#currency ul.currency-content li.item-currency'), ['first','last'])</script>
</div>
<?php endif; ?>
 
