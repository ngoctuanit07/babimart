				font = font[font.length-1];
				if (typeof fontLoaded[font] == 'undefined') {
					$('head').append('<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family='+encodeURIComponent(font)+'"></link>');
					$('#em0095_typography_google_fonts_preview').html(font)
						.css('font-family', font);
				}
			}
		});
		
	
	// stripes pattern
	$('a.em0095_general_page_bgimage').click(function() {
		$('a.em0095_general_page_bgimage').removeClass('selected');
		$(this).addClass('selected');
		$('#em0095_general_page_bgimage').val($(this).data('input-value'));
		return false;
	});	
	$('a.em0095_typography_header_bgimage').click(function() {
		$('a.em0095_typography_header_bgimage').removeClass('selected');
		$(this).addClass('selected');
		$('#em0095_typography_header_bgimage').val($(this).data('input-value'));
		return false;
	});
	$('a.em0095_typography_body_bgimage').click(function() {
		$('a.em0095_typography_body_bgimage').removeClass('selected');
		$(this).addClass('selected');
		$('#em0095_typography_body_bgimage').val($(this).data('input-value'));
		return false;
	});
	$('a.em0095_typography_footer_bgimage').click(function() {
		$('a.em0095_typography_footer_bgimage').removeClass('selected');
		$(this).addClass('selected');
		$('#em0095_typography_footer_bgimage').val($(this).data('input-value'));
		return false;
	});
	
	$('head').append('<link rel="stylesheet" type="text/css" href="<?php echo Mage::getBaseUrl('js') ?>em/colorjoe.css" />');
	$(document).ready(function(){
        var a = $('#em0095_general_box_wide').val();
       if(a=='wide'){
           $('#row_em0095_general_page_bgcolor').hide();
           $('#row_em0095_general_page_bgposition').hide();
           $('#row_em0095_general_page_bgrepeat').hide();
           $('#row_em0095_general_page_bgimage').hide();
       }else{
           $('#row_em0095_general_page_bgcolor').show();
           $('#row_em0095_general_page_bgposition').show();
           $('#row_em0095_general_page_bgrepeat').show();
           $('#row_em0095_general_page_bgimage').show();
       }

    });

	
    // box/wide
    $('#em0095_general_box_wide').change(function(){
       var a = $('#em0095_general_box_wide').val();
       if(a=='wide'){
           $('#row_em0095_general_page_bgcolor').hide();
           $('#row_em0095_general_page_bgposition').hide();
           $('#row_em0095_general_page_bgrepeat').hide();
           $('#row_em0095_general_page_bgimage').hide();
       }else{
           $('#row_em0095_general_page_bgcolor').show();
           $('#row_em0095_general_page_bgposition').show();
           $('#row_em0095_general_page_bgrepeat').show();
           $('#row_em0095_general_page_bgimage').show();
       }
    });

	$('head').append('<link rel="stylesheet" type="text/css" href="<?php echo Mage::getBaseUrl('js') ?>em/colorjoe.css" />');
	$('head').append('<link rel="stylesheet" type="text/css" href="<?php echo Mage::getBaseUrl('js') ?>em/iehacks.css" />');
	
	
	// color picker
	(function() {
		var focus;

		var el = document.createElement('div');
		el.id = 'hslPicker';
		$('body').append(el);

		var cj = colorjoe.hsl(el, '#ffffff', [
			// 'close',
			'alpha',
			'currentColor',
			['fields', {space: 'HSLA', limit: 100, fix:2}],
			['fields', {space: 'CMYKA', limit: 100, fix:2}],
			'hex'
		]).on('change', function(c) {
			if (focus) {
				$(focus).val(c.cssa())
					.css('background-color', c.cssa());
			}
			
		}).update().hide();
	
		var tm;
		$('.colorjoe').focus(function() {
			clearTimeout(tm);
			focus = this;
			$(el).css({position:'absolute', left:$(this).offset().left+'px', top:$(this).offset().top+$(this).outerHeight()+'px'});
			if ($(this).val()) cj.set($(this).val());
			cj.show();
		}).blur(function() {
			tm = setTimeout(function() {
				cj.hide();
			}, 200);
		}).change(function() {
			$(this).css('background-color', $(this).val());
		}).each(function() {
			$(this).css('background-color', $(this).val());
		});
	})();
});
</script>